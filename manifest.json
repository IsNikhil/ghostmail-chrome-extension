{
  "manifest_version": 3,
  "name": "GhostMail",
  "short_name": "GhostMail",
  "version": "1.6.4",
  "description": "Create and manage temporary email addresses from multiple services.",
  "author": "Nikhil Shah",
  "minimum_chrome_version": "114",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://api.guerrillamail.com/*",
    "https://dropmail.me/*",
    "https://api.mail.gw/*",
    "https://api.mail.tm/*",
    "https://api.tempmail.lol/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
